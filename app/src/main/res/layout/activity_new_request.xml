<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.NewRequest"
    android:background="@color/backgroundColor"
    android:layoutDirection="rtl">
    <androidx.appcompat.widget.Toolbar
        app:title="طلب جديد"
        android:id="@+id/public_toolbar"
        app:layout_collapseMode="pin"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white"

        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />
    <LinearLayout
        android:layout_below="@+id/public_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="تفاصيل الطلب.."
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt_small_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal_size">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TableLayout
                            android:layout_marginTop="@dimen/txt_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:weightSum="1">
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:text="موقع التسليم"
                                    android:textSize="@dimen/txt_normal_size"
                                    android:gravity="center"/>
                                <TextView
                                    android:textStyle="bold"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:text="بحري"
                                    android:textSize="@dimen/txt_normal_size"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"/>
                            </TableRow>
                        </TableLayout>
                        <View
                            android:layout_marginTop="@dimen/margin_small_size"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#000"/>

                        <TableLayout
                            android:layout_marginTop="@dimen/txt_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:gravity="center_vertical"
                                android:background="@drawable/rec_new_item_bg"
                                android:layout_marginLeft="@dimen/margin_normal_size"
                                android:layout_marginRight="@dimen/margin_normal_size"
                                android:weightSum="1">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.45"
                                    android:text="موقع الاستلام1"
                                    android:textSize="@dimen/txt_normal_size"
                                    android:gravity="center"/>
                                <ImageView
                                    android:src="@drawable/ic_place_map"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.1"
                                    android:layout_height="30dp"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.45"
                                    android:text="بحري"
                                    android:textSize="@dimen/txt_normal_size"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"/>
                            </TableRow>
                        </TableLayout>
                        <TableLayout
                            android:layout_marginTop="@dimen/txt_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:gravity="center_vertical"
                                android:background="@drawable/rec_new_item_bg"
                                android:layout_marginLeft="@dimen/margin_normal_size"
                                android:layout_marginRight="@dimen/margin_normal_size"
                                android:weightSum="1">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.45"
                                    android:text="موقع الاستلام2"
                                    android:textSize="@dimen/txt_normal_size"
                                    android:gravity="center"/>
                                <ImageView
                                    android:src="@drawable/ic_place_map"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.1"
                                    android:layout_height="30dp"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.45"
                                    android:text="الخرطوم الصحافة"
                                    android:textSize="@dimen/txt_normal_size"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"/>
                            </TableRow>
                        </TableLayout>

                        <TableLayout
                            android:layout_marginTop="@dimen/txt_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:gravity="center_vertical"
                                android:background="@drawable/rec_new_item_bg"
                                android:layout_marginLeft="@dimen/margin_normal_size"
                                android:layout_marginRight="@dimen/margin_normal_size"
                                android:weightSum="1">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.45"
                                    android:text="موقع الاستلام3"
                                    android:textSize="@dimen/txt_normal_size"
                                    android:gravity="center"/>
                                <ImageView
                                    android:src="@drawable/ic_place_map"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.1"
                                    android:layout_height="30dp"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.45"
                                    android:text="الخرطوم اركويت"
                                    android:textSize="@dimen/txt_normal_size"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/colorPrimary"/>
                            </TableRow>
                        </TableLayout>

                        <View
                            android:layout_marginTop="@dimen/margin_small_size"
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#000"/>

                        <ImageView
                            android:layout_marginTop="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_normal_size"
                            android:layout_marginRight="@dimen/margin_normal_size"
                            android:src="@drawable/ic_money"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>
                        <TableLayout
                            android:layout_marginBottom="@dimen/margin_large_size"
                            android:layout_marginTop="@dimen/txt_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TableRow
                                android:weightSum="1">
                                <LinearLayout android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="قيمة الدواء"
                                        android:textSize="@dimen/txt_normal_size"
                                        android:gravity="center"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="6.000 SDG"
                                        android:textSize="24dp"
                                        android:gravity="center"
                                        android:textColor="@color/colorAccent"/>
                                </LinearLayout>
                                <LinearLayout android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.5"
                                    android:gravity="center">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="التوصيل"
                                        android:textSize="@dimen/txt_normal_size"
                                        android:gravity="center"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="100 SDG"
                                        android:textSize="24dp"
                                        android:gravity="center"
                                        android:textColor="@color/colorAccent"/>
                                </LinearLayout>
                            </TableRow>
                        </TableLayout>

                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="horizontal"
            android:gravity="center">
            <RelativeLayout
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layoutDirection="rtl"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_bg_green">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_check"
                    android:id="@+id/ic_go"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="قبول"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginRight="@dimen/margin_small_size"
                android:layout_marginLeft="@dimen/margin_small_size"
                android:layoutDirection="rtl"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_bg_mute">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_mute"
                    android:id="@+id/ic_go2"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="تجاهل"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>