<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_margin="@dimen/margin_small_size"
    android:padding="@dimen/margin_small_size"
    app:cardCornerRadius="@dimen/margin_normal_size">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/btnLay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:weightSum="1"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_cart"/>
                <TextView
                    android:id="@+id/txtAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_small_size"
                    android:text="اضافة للسلة"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_place_808080"/>
                <TextView
                    android:id="@+id/txtShowMap"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/txt_small_size"
                    android:text="عرض على الخريطة"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_normal_size"
                    android:layout_marginLeft="@dimen/margin_normal_size"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/btnLay">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/price"
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 ج س"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_large_size"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/txtPharmachy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_marginEnd="@dimen/margin_small_size"
                    android:layout_marginRight="@dimen/margin_small_size"
                    android:text="صيدلية المك نمر"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txt_large_size"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اسم الصيدلية "
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_normal_size"/>
                <TextView
                    android:id="@+id/pharmcyName"
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="......."
                    android:textSize="@dimen/txt_normal_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الشركة"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_normal_size"/>
                <TextView
                    android:id="@+id/companyName"
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="......."
                    android:textSize="@dimen/txt_normal_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الوصف"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_normal_size"/>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_margin="@dimen/margin_small_size"
                    android:text="بندول سعودي"
                    android:textSize="@dimen/txt_normal_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الموقع"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_normal_size"/>
                <TextView
                    android:id="@+id/location"
                    android:layout_margin="@dimen/margin_small_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الخرطوم شارع الستين محطة الفردوس"
                    android:textSize="@dimen/txt_normal_size"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>