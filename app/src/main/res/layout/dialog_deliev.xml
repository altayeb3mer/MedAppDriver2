<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_normal_size"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/txt_large_size"
            android:text="استلام من الصيدلية"/>
        <TextView
            android:layout_marginTop="@dimen/margin_small_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_size"
            android:text="طلب رقم 12345"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <TextView
            android:layout_marginTop="@dimen/margin_small_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/txt_normal_size"
            android:text="ادخل كود التسليم"/>
        <EditText
            android:paddingLeft="@dimen/margin_small_size"
            android:paddingRight="@dimen/margin_small_size"
            android:layout_marginTop="@dimen/margin_small_size"
            android:background="@drawable/shape_rectangle_rounded_border"
            android:layout_width="270dp"
            android:layout_height="45dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn"
            android:layout_marginTop="@dimen/margin_normal_size"
            android:textColor="@android:color/white"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="استلام"
            android:textSize="@dimen/txt_large_size"
            android:background="@drawable/btn_bg_blue"/>
    </LinearLayout>

</RelativeLayout>