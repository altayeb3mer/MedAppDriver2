<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Register"
    android:layoutDirection="rtl">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/transparent">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:background="@drawable/top_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/r2">
                    <ImageView

                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="65dp"
                        android:src="@drawable/icon_app"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="تسجيل"
                            android:textSize="25sp"/>
                        <TextView
                            android:textColor="@android:color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="دخـــــول"
                            android:textSize="25sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <androidx.appcompat.widget.Toolbar
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@color/colorPrimary"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:background="@drawable/shape_back_circle"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_arrow_back" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_small_size"
                        android:layout_marginRight="@dimen/margin_small_size"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:background="@android:color/white" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:background="@android:color/white" />

                        <View
                            android:layout_width="15dp"
                            android:layout_height="1dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:background="@android:color/white" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/margin_normal_size"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_marginBottom="@dimen/margin_small_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img2"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_person"/>
                        <EditText
                            android:id="@+id/fullName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:hint="الاسم"
                            android:layout_toLeftOf="@+id/img2"
                            android:background="@android:color/transparent"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_marginBottom="@dimen/margin_small_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img10"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_email"/>
                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="الايميل (اختياري)"
                            android:layout_toLeftOf="@+id/img10"
                            android:background="@android:color/transparent"
                            android:singleLine="true"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:inputType="textEmailAddress"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_marginBottom="@dimen/margin_small_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_phone"/>
                        <EditText
                            android:id="@+id/phoneNumber"
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="رقم الهاتف"
                            android:layout_toLeftOf="@+id/img"
                            android:background="@android:color/transparent"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:inputType="number"
                            android:maxLength="10"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_marginBottom="@dimen/margin_small_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img21"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_blace"/>
                        <EditText
                            android:singleLine="true"
                            android:id="@+id/location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="العنوان"
                            android:layout_toLeftOf="@+id/img21"
                            android:background="@android:color/transparent"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_marginBottom="@dimen/margin_small_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img25"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_person"/>
                        <Spinner
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:singleLine="true"
                            android:layout_toLeftOf="@+id/img25"
                            android:background="@android:color/transparent"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_marginBottom="@dimen/margin_small_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img3"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_pass"/>
                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="كلمة المرور"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:layout_toLeftOf="@+id/img3"
                            android:background="@android:color/transparent"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardCornerRadius="@dimen/margin_small_size"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_marginBottom="@dimen/margin_small_size">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/img4"
                            android:layout_centerVertical="true"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_pass"/>
                        <EditText
                            android:inputType="textPassword"
                            android:id="@+id/confirm_pass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="كلمة المرور"
                            android:singleLine="true"
                            android:layout_toLeftOf="@+id/img4"
                            android:background="@android:color/transparent"
                            android:layout_marginRight="@dimen/margin_small_size"
                            android:layout_marginLeft="@dimen/margin_small_size"
                            android:gravity="center_vertical"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:onClick="register"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/margin_large_size"
                    android:layout_marginRight="@dimen/margin_large_size"
                    android:layout_marginTop="@dimen/margin_small_size"
                    android:layout_marginBottom="@dimen/margin_small_size"
                    android:layout_gravity="left">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_bg_10_radius"
                        android:layout_margin="@dimen/margin_small_size">
                        <TextView
                            android:layout_marginLeft="@dimen/margin_normal_size"
                            android:layout_marginRight="@dimen/margin_normal_size"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="تسجيل"
                            android:textStyle="bold"
                            android:textSize="@dimen/txt_normal_size"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/shape_circle_green"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="@dimen/margin_small_size">
                        <LinearLayout
                            android:background="@drawable/shape_back_circle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            >
                            <ImageView
                                android:scaleType="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_arrow_back"/>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <TextView
                    android:visibility="gone"
                    android:layout_margin="@dimen/margin_normal_size"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/cardColor"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_large_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="أو"
                    android:textSize="@dimen/txt_large_size"/>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal">
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#3B5998"
                        app:cardCornerRadius="@dimen/margin_normal_size"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="@dimen/margin_normal_size">
                        <ImageView
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_face"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardBackgroundColor="#D44638"
                        app:cardCornerRadius="@dimen/margin_normal_size"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="@dimen/margin_normal_size">
                        <ImageView
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_g"/>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:onClick="toLogin"
                android:background="@drawable/bg_new_reg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="center">
                <ImageView
                    android:layout_marginLeft="@dimen/margin_small_size"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow_right48"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>